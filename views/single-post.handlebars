<article class="post">
    <div class="title">
        {{post.title}}
        <br>
        {{post.post_body}}
    </div>
    <div class="meta">
        by {{post.user.username}} on {{post.created_at}}
    </div>
</article>
{{#if loggedIn}}
<!--without frontend javascript, connect form to route-->
<form action="/api/comments" method="post" class="comment-form">
    <div>
        <input type="hidden" name="post_id" value="{{post.id}}" />
        <textarea name="comment_text"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{/if}}
<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>